<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="renkarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
    
    <style name="CheckBoxTheme">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Animation.DialogMessage.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>
    
    <style name="ProgressLoader.Animation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Renkar.TextField.Padding" parent="TextAppearance.AppCompat">
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="Renkar.TextInputLayout.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

    <style name="Renkar.TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/light_grey</item>
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

</resources>
