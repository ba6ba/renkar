<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="renkarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowEnterTransition">@transition/slide</item>
        <item name="android:windowExitTransition">@transition/slide</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
    
    <style name="CheckBoxTheme">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>


</resources>
