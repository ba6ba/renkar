<androidx.appcompat.widget.LinearLayoutCompat
		xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
		android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_marginHorizontal="@dimen/normal_margin"
		android:orientation="vertical"
		android:animateLayoutChanges="true"
		android:layout_gravity="center"
		xmlns:android="http://schemas.android.com/apk/res/android">
	
	<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/edit_text_background"
			android:hint="MUSTANG"
			android:textColorHint="@color/lightest_grey"
			android:textSize="@dimen/large_text_size"
			android:paddingStart="@dimen/small_padding"
			android:paddingEnd="@dimen/small_padding"
			android:maxLines="1"
			android:maxLength="15"
			android:ellipsize="end"
			android:layout_marginTop="@dimen/small_margin"
			android:layout_marginEnd="@dimen/small_margin"
			android:id="@+id/name"
			android:textColor="@color/grey"
			android:imeOptions="actionNext"
			android:inputType="textCapCharacters"
			android:fontFamily="@font/proximanovaslight"
	
	/>
	
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:weightSum="2"
	              android:layout_marginTop="@dimen/small_margin"
	              android:layout_marginBottom="@dimen/small_margin"
	>
		
		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="0dp"
				android:layout_weight="1.2"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text_background"
				android:hint="FORD"
				android:textColorHint="@color/lightest_grey"
				android:inputType="textCapCharacters"
				android:fontFamily="@font/proximanovaslight"
				android:textColor="@color/black"
				android:textSize="@dimen/medium_text_size"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:layout_gravity="center"
				android:maxLines="1"
				android:maxLength="12"
				android:ellipsize="end"
				android:layout_marginEnd="@dimen/small_margin"
				android:id="@+id/manufactured_by"
				android:imeOptions="actionNext"
		/>
		
		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="0dp"
				android:layout_weight=".8"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text_background"
				android:hint="SEDAN"
				android:textColorHint="@color/lightest_grey"
				android:textSize="@dimen/medium_text_size"
				android:inputType="textCapCharacters"
				android:fontFamily="@font/proximanovaslight"
				android:textColor="@color/black"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:maxLines="1"
				android:id="@+id/vehicle_type"
				android:maxLength="10"
				android:ellipsize="end"
				android:layout_gravity="center"
				android:imeOptions="actionNext"
		/>
		
	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:layout_weight="3"
	              android:paddingTop="@dimen/small_padding"
	              android:paddingBottom="@dimen/small_padding"
	>
		
		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text_background"
				android:hint="AOK - 00009"
				android:textColorHint="@color/lightest_grey"
				android:inputType="textCapCharacters"
				android:fontFamily="@font/proximanovaslight"
				android:textColor="@color/black"
				android:textSize="@dimen/medium_text_size"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="@dimen/small_margin"
				android:maxLines="1"
				android:ellipsize="end"
				android:id="@+id/number"
				android:imeOptions="actionNext"
		/>
		
		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text_background"
				android:hint="1989"
				android:textColorHint="@color/lightest_grey"
				android:textSize="@dimen/medium_text_size"
				android:inputType="number"
				android:fontFamily="@font/proximanovaslight"
				android:textColor="@color/black"
				android:layout_marginEnd="@dimen/small_margin"
				android:maxLines="1"
				android:id="@+id/model"
				android:layout_gravity="center"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:maxLength="6"
				android:ellipsize="end"
				android:imeOptions="actionNext"
		
		/>
		
		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text_background"
				android:hint="16000 KM"
				android:textColorHint="@color/lightest_grey"
				android:inputType="number"
				android:fontFamily="@font/proximanovaslight"
				android:textColor="@color/black"
				android:textSize="@dimen/medium_text_size"
				android:layout_gravity="center"
				android:maxLines="1"
				android:ellipsize="end"
				android:id="@+id/miles"
				android:imeOptions="actionNext"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
		/>
		
	</LinearLayout>
	
	<RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	
	>
		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/edit_text_background"
				android:hint="Description"
				android:textColorHint="@color/lightest_grey"
				android:inputType="text"
				android:fontFamily="@font/proximanovaslight"
				android:textColor="@color/black"
				android:textSize="@dimen/small_text_size"
				android:padding="@dimen/small_padding"
				android:layout_toStartOf="@id/color_picker_view"
				android:layout_marginTop="@dimen/small_margin"
				android:layout_marginBottom="@dimen/small_margin"
				android:layout_marginEnd="@dimen/normal_margin"
				android:maxLines="3"
				android:textAllCaps="false"
				android:ellipsize="end"
				android:id="@+id/description"
				android:minHeight="90dp"
				android:gravity="top"
				android:layout_alignParentStart="true"
				android:imeOptions="actionDone"
		/>
		
		<ImageView android:layout_width="wrap_content" android:layout_height="10dp"
		           android:layout_centerVertical="true"
		           android:layout_alignEnd="@id/color_picker_view"
		           android:layout_alignStart="@id/color_picker_view"
		           android:background="@color/colorAccent"
		           android:id="@+id/selectedColor"
		           android:layout_alignBottom="@id/description"
		/>
		
		<com.skydoves.colorpickerpreference.ColorPickerView
				android:id="@+id/color_picker_view"
				android:layout_width="75dp"
				android:layout_height="75dp"
				app:palette="@drawable/palette"
				app:selector="@drawable/wheel"
				android:layout_alignParentEnd="true"
				android:layout_alignTop="@id/description"
		/>
	
	
	
	</RelativeLayout>
	
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:layout_gravity="center_vertical"
	>
		<com.google.android.material.checkbox.MaterialCheckBox
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Instant Book"
				android:textColor="@color/colorPrimaryDark"
				android:fontFamily="@font/proximanovaregular"
				android:textAllCaps="true"
				android:textSize="@dimen/medium_text_size"
				app:useMaterialThemeColors="true"
				android:buttonTint="@color/colorAccent"
				android:id="@+id/instantBook"
		/>
		
		<ImageView android:layout_width="24dp" android:layout_height="24dp"
		           android:background="@drawable/question_mark_black"
		           android:backgroundTint="@color/lightest_grey"
		           android:layout_gravity="center_vertical"
		           android:layout_margin="@dimen/small_margin"
		           android:id="@+id/instantBookDesc"
		/>
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="@dimen/small_margin"
			android:layout_marginBottom="@dimen/small_margin"
			android:weightSum="3"
			android:baselineAligned="false"
	>
		
		<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
		              android:layout_weight="1" android:padding="@dimen/small_padding"
		              android:layout_gravity="center"
		              android:orientation="horizontal"
		              android:id="@+id/gas"
		>
			<ImageView android:layout_width="25dp" android:layout_height="25dp"
			           android:background="@drawable/ic_check"
			           android:layout_marginEnd="@dimen/small_margin"
			           android:id="@+id/gasImage"
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="CNG"
			          android:fontFamily="@font/proximanovaregular"
			          android:textSize="@dimen/medium_text_size"
			          android:textColor="@color/dark_grey"
			          android:textAllCaps="true"
			/>
			
		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
		              android:layout_weight="1" android:padding="@dimen/small_padding"
		              android:layout_gravity="center"
		              android:orientation="horizontal"
		              android:id="@+id/petrol"
		>
			<ImageView android:layout_width="25dp" android:layout_height="25dp"
			           android:background="@drawable/ic_check"
			           android:layout_marginEnd="@dimen/small_margin"
			           android:id="@+id/petrolImage"
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="PETROL"
			          android:fontFamily="@font/proximanovaregular"
			          android:textSize="@dimen/medium_text_size"
			          android:textColor="@color/dark_grey"
			          android:textAllCaps="true"
			/>
		
		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
		              android:layout_weight="1" android:padding="@dimen/small_padding"
		              android:layout_gravity="center"
		              android:orientation="horizontal"
		              android:id="@+id/diesel"
		>
			<ImageView android:layout_width="25dp" android:layout_height="25dp"
			           android:background="@drawable/ic_check"
			           android:layout_marginEnd="@dimen/small_margin"
			           android:id="@+id/dieselImage"
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="DIESEL"
			          android:fontFamily="@font/proximanovaregular"
			          android:textSize="@dimen/medium_text_size"
			          android:textColor="@color/dark_grey"
			          android:textAllCaps="true"
			/>
		
		</LinearLayout>
		
	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:layout_weight="4"
	              android:layout_marginTop="@dimen/small_margin"
	              android:layout_marginBottom="@dimen/small_margin"
	              android:baselineAligned="false"
	>
		
		<RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
		                android:layout_weight="1.3" android:gravity="center_vertical"
		                android:layout_gravity="center_vertical"
		                android:layout_marginStart="@dimen/small_margin"
		                android:layout_marginEnd="@dimen/small_margin"
		>
			
			<FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
			             android:background="@color/colorAccent"
			             android:id="@+id/bg"
			             android:layout_centerHorizontal="true"
			             android:layout_marginBottom="@dimen/normal_margin"
			             android:layout_alignBottom="@id/heading"
			             android:layout_alignParentTop="true"
			             android:layout_marginTop="@dimen/normal_margin"
			/>
			
			<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
			          android:text="CAPACITY" android:textAlignment="center"
			          android:gravity="center" android:textColor="@color/colorAccent"
			          android:layout_gravity="center_horizontal"
			          android:background="@color/white"
			          android:textSize="@dimen/small_text_size"
			          android:paddingTop="@dimen/medium_padding"
			          android:paddingBottom="@dimen/small_padding"
			          android:layout_marginStart="@dimen/normal_margin"
			          android:layout_marginEnd="@dimen/normal_margin"
			          android:fontFamily="@font/proximanovaregular"
			          android:layout_alignParentBottom="true"
			          android:id="@+id/heading"
			/>
		
		</RelativeLayout>
		
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight=".9"
				android:layout_height="wrap_content"
				android:background="@drawable/capacity_bg_selector"
				android:orientation="vertical"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:paddingTop="@dimen/normal_padding"
				android:paddingBottom="@dimen/normal_padding"
				android:id="@+id/two"
				android:layout_marginEnd="@dimen/small_margin"
				android:layout_marginStart="@dimen/small_margin"
		  
		>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="2" android:background="@drawable/white_round_corner_bg"
			          android:textAlignment="center" android:gravity="center"
			          android:textAllCaps="true" android:textColor="@color/dark_grey"
			          android:textSize="@dimen/medium_text_size"
			          android:fontFamily="@font/proximanovaregular"
			          android:textStyle="bold"
			          android:layout_gravity="center_horizontal"
			          android:layout_marginTop="@dimen/small_margin"
			          android:layout_marginBottom="@dimen/small_margin"
			          android:padding="@dimen/small_padding"
			          
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="PERSONS" android:textAlignment="center"
			          android:gravity="center" android:textColor="@color/white"
			          android:layout_gravity="center_horizontal"
			          android:layout_marginTop="@dimen/small_margin"
			          android:layout_marginBottom="@dimen/small_margin"
			          android:fontFamily="@font/proximanovaslight"
			/>
		
		
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight=".9"
				
				android:layout_height="wrap_content"
				android:background="@drawable/capacity_bg_selector"
				android:orientation="vertical"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:paddingTop="@dimen/normal_padding"
				android:paddingBottom="@dimen/normal_padding"
				android:id="@+id/four"
				android:layout_marginEnd="@dimen/small_margin"
				android:layout_marginStart="@dimen/small_margin"
		
		>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="4" android:background="@drawable/white_round_corner_bg"
			          android:textAlignment="center" android:gravity="center"
			          android:textAllCaps="true" android:textColor="@color/dark_grey"
			          android:textSize="@dimen/medium_text_size"
			          android:fontFamily="@font/proximanovaregular"
			          android:textStyle="bold"
			          android:layout_gravity="center_horizontal"
			          android:layout_marginTop="@dimen/small_margin"
			          android:layout_marginBottom="@dimen/small_margin"
			          android:padding="@dimen/small_padding"
			
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="PERSONS" android:textAlignment="center"
			          android:gravity="center" android:textColor="@color/white"
			          android:layout_gravity="center_horizontal"
			          android:layout_marginTop="@dimen/small_margin"
			          android:layout_marginBottom="@dimen/small_margin"
			          android:fontFamily="@font/proximanovaslight"
			/>
		
		
		</LinearLayout>
		
		<LinearLayout
				android:layout_width="0dp"
				android:layout_weight=".9"
				android:layout_height="wrap_content"
				android:background="@drawable/capacity_bg_selector"
				android:orientation="vertical"
				android:paddingStart="@dimen/small_padding"
				android:paddingEnd="@dimen/small_padding"
				android:paddingTop="@dimen/normal_padding"
				android:paddingBottom="@dimen/normal_padding"
				android:id="@+id/five"
				android:layout_marginEnd="@dimen/small_margin"
				android:layout_marginStart="@dimen/small_margin"
		
		>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="5" android:background="@drawable/white_round_corner_bg"
			          android:textAlignment="center" android:gravity="center"
			          android:textAllCaps="true" android:textColor="@color/dark_grey"
			          android:textSize="@dimen/medium_text_size"
			          android:fontFamily="@font/proximanovaregular"
			          android:textStyle="bold"
			          android:layout_gravity="center_horizontal"
			          android:layout_marginTop="@dimen/small_margin"
			          android:layout_marginBottom="@dimen/small_margin"
			          android:padding="@dimen/small_padding"
			
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="PERSONS" android:textAlignment="center"
			          android:gravity="center" android:textColor="@color/white"
			          android:layout_gravity="center_horizontal"
			          android:layout_marginTop="@dimen/small_margin"
			          android:layout_marginBottom="@dimen/small_margin"
			          android:fontFamily="@font/proximanovaslight"
			/>
		
		
		</LinearLayout>
		
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_marginTop="@dimen/small_margin"
			android:layout_marginBottom="@dimen/small_margin"
	
	>
		<View android:layout_width="2dp" android:layout_height="match_parent"
		      android:background="@color/dark_grey"
		/>
		
		
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:text="AVAILABLE\nDAYS"
		          android:textAlignment="textStart"
		          android:textColor="@color/dark_grey"
		          android:padding="@dimen/small_padding"
		          android:textSize="@dimen/small_text_size"
		          android:fontFamily="@font/proximanovaregular"
		/>
		
		
		<fragment
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/daysFragment"
				android:name="com.example.sarwan.renkar.modules.days.DayFragment"
				android:layout_margin="@dimen/small_margin"
		/>
	
	</LinearLayout>
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_marginTop="@dimen/small_margin"
			android:layout_marginBottom="@dimen/small_margin"
	
	>
		<View android:layout_width="2dp" android:layout_height="match_parent"
		      android:background="@color/dark_grey"
		/>
		
		
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:text="FEATURES"
		          android:textAlignment="textStart"
		          android:textColor="@color/dark_grey"
		          android:padding="@dimen/small_padding"
		          android:textSize="@dimen/small_text_size"
		          android:fontFamily="@font/proximanovaregular"
		/>
		
		<fragment
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/featuresFragment"
				class="com.example.sarwan.renkar.modules.features.FeaturesFragment"
				android:layout_margin="@dimen/small_margin"
		/>
	</LinearLayout>
	

</androidx.appcompat.widget.LinearLayoutCompat>