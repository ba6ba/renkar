<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/medium_padding"
                android:paddingEnd="@dimen/medium_padding"
                android:paddingTop="@dimen/normal_padding"
                android:paddingBottom="@dimen/normal_padding"
                android:layout_height="250dp">

    <FrameLayout android:layout_width="match_parent" android:layout_height="200dp"
                 android:id="@+id/frame"
    >

        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/coverFrame"
                app:roundedCornerRadius="25dp"
                android:elevation="@dimen/small_elevation"
        />

    </FrameLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/small_margin"
            app:cardElevation="@dimen/normal_elevation"
    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="15$/hr"
                      android:textSize="@dimen/large_text_size"
                      android:fontFamily="@font/gothambold"
                      android:gravity="top"
                      android:id="@+id/price"
                      android:textColor="@color/grey"
                      android:paddingStart="@dimen/large_padding"
                      android:paddingEnd="@dimen/large_padding"
                      android:paddingTop="@dimen/normal_padding"
                      android:paddingBottom="@dimen/normal_padding"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="4.5"
                      android:textSize="@dimen/medium_text_size"
                      android:fontFamily="@font/gothambold"
                      android:gravity="center_vertical"
                      android:id="@+id/ratingBar"
                      android:textColor="@color/grey"
                      android:padding="@dimen/small_padding"
                      android:layout_marginEnd="@dimen/small_margin"
                      android:drawableStart="@android:drawable/star_big_on"
                      android:drawablePadding="@dimen/small_padding"
                      android:layout_gravity="center_vertical"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>