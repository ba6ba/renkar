<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:elevation="@dimen/normal_elevation"
                android:layout_height="270dp">

    <FrameLayout android:layout_width="match_parent" android:layout_height="200dp"
                 android:layout_margin="@dimen/normal_margin"
                 android:id="@+id/frame"
    >
        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/coverFrame"
                app:roundedCornerRadius="25dp"
                android:elevation="@dimen/small_elevation"
        />

    </FrameLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="@dimen/v_large_margin"
            android:layout_marginEnd="@dimen/v_large_margin"
            android:layout_marginBottom="@dimen/small_margin"
            app:cardElevation="@dimen/normal_elevation"
            app:contentPadding="@dimen/a_small_padding"
            android:layout_marginTop="190dp"
    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
        >

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="15$/hr"
                      android:textSize="@dimen/large_text_size"
                      android:fontFamily="@font/gothambold"
                      android:gravity="top"
                      android:id="@+id/price"
                      android:textColor="@color/grey"
            />

            <androidx.appcompat.widget.AppCompatRatingBar
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_gravity="center"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>