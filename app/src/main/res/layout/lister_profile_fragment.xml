<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    >

        <RelativeLayout android:layout_width="match_parent" android:layout_height="280dp"
                        android:id="@+id/lister_top"
                        android:layout_marginBottom="@dimen/normal_margin"
                        android:visibility="visible"
        >

            <View android:layout_width="match_parent" android:layout_height="200dp"
                  android:background="@drawable/ic_profile_header"
            />

            <FrameLayout android:layout_width="125dp" android:layout_height="125dp"
                         android:layout_centerHorizontal="true"
                         android:id="@+id/image_layout"
                         android:layout_alignParentBottom="true"
                         android:layout_marginBottom="@dimen/medium_margin"
            >

                <View android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:background="@drawable/stroke_accent"
                />

                <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent" android:layout_height="match_parent"
                        app:roundAsCircle="true"
                        android:id="@+id/image"
                        android:layout_margin="@dimen/a_small_margin"
                />

            </FrameLayout>

            <View android:layout_width="50dp" android:layout_height="50dp"
                  android:background="@drawable/white_round_corner_bg"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/edit"
                  android:layout_alignParentBottom="true"
            />

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="280dp"
                        android:id="@+id/renter_top"
                        android:layout_marginBottom="@dimen/normal_margin"
                        android:gravity="center"
                        android:visibility="invisible"
        >
            <View android:layout_width="60dp" android:layout_height="3dp"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentTop="true"
                  android:background="@drawable/divider"
                  android:backgroundTint="@color/light_grey"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="ABDUL BASIT"
                      android:fontFamily="@font/gothamultra"
                      android:textSize="@dimen/sub_heading_text_size"
                      android:textColor="@color/dark_grey"
                      android:layout_centerHorizontal="true"
                      android:id="@+id/my_name"
                      android:layout_margin="@dimen/normal_margin"
            />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@drawable/edit_text_background_rounded"
                          android:layout_below="@id/my_name"
                          android:layout_centerHorizontal="true"
                          android:layout_margin="@dimen/normal_margin"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:padding="@dimen/large_padding"
            >

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="ABDUL BASIT"
                          android:fontFamily="@font/gothambook"
                          android:textSize="@dimen/normal_text_size"
                          android:textColor="@color/dark_grey"
                          android:textAlignment="center"
                          android:id="@+id/renter_rides"

                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Your Rides"
                          android:fontFamily="@font/gothambook"
                          android:textSize="@dimen/small_text_size"
                          android:textColor="@color/dark_grey"
                          android:textAlignment="center"
                          android:layout_marginTop="@dimen/normal_margin"

                />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_below="@id/lister_top"
        >
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/a_small_margin"
                            android:layout_marginBottom="@dimen/a_small_margin"
                            android:id="@+id/bottom"
            >

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@drawable/profile_white_rounded_bg"
                          android:backgroundTint="@color/colorAccent"
                          android:textColor="@color/white"
                          android:layout_marginEnd="@dimen/a_small_margin"
                          android:textSize="@dimen/medium_text_size"
                          android:fontFamily="@font/gothambook"
                          android:text="@string/settings"
                          android:padding="@dimen/normal_padding"
                          android:id="@+id/settings"
                          android:layout_marginBottom="@dimen/a_small_margin"
                          android:layout_marginTop="@dimen/a_small_margin"
                />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textColor="@color/grey"
                          android:layout_marginEnd="@dimen/a_small_margin"
                          android:textSize="@dimen/medium_text_size"
                          android:fontFamily="@font/gothambook"
                          android:text="@string/account"
                          android:padding="@dimen/normal_padding"
                          android:id="@+id/account"
                          android:layout_below="@id/settings"
                          android:layout_marginBottom="@dimen/a_small_margin"
                          android:background="@drawable/profile_white_rounded_bg"
                          android:backgroundTint="@color/white"
                />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textColor="@color/grey"
                          android:layout_marginEnd="@dimen/a_small_margin"
                          android:textSize="@dimen/medium_text_size"
                          android:fontFamily="@font/gothambook"
                          android:text="@string/history"
                          android:padding="@dimen/normal_padding"
                          android:id="@+id/history"
                          android:layout_below="@id/account"
                          android:background="@drawable/profile_white_rounded_bg"
                          android:backgroundTint="@color/white"
                          android:layout_marginBottom="@dimen/a_small_margin"
                />


                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textColor="@color/grey"
                          android:layout_marginEnd="@dimen/a_small_margin"
                          android:textSize="@dimen/medium_text_size"
                          android:fontFamily="@font/gothambook"
                          android:text="@string/payment_method"
                          android:padding="@dimen/normal_padding"
                          android:id="@+id/payment_method"
                          android:layout_below="@id/history"
                          android:background="@drawable/profile_white_rounded_bg"
                          android:backgroundTint="@color/white"
                          android:layout_marginBottom="@dimen/a_small_margin"
                />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textColor="@color/grey"
                          android:layout_marginEnd="@dimen/a_small_margin"
                          android:textSize="@dimen/medium_text_size"
                          android:fontFamily="@font/gothambook"
                          android:text="@string/about"
                          android:padding="@dimen/normal_padding"
                          android:id="@+id/about"
                          android:layout_below="@id/payment_method"
                          android:layout_marginBottom="@dimen/a_small_margin"
                          android:background="@drawable/profile_white_rounded_bg"
                          android:backgroundTint="@color/white"
                />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:textColor="@color/grey"
                          android:layout_marginEnd="@dimen/a_small_margin"
                          android:textSize="@dimen/medium_text_size"
                          android:fontFamily="@font/gothambook"
                          android:text="@string/sign_out"
                          android:padding="@dimen/normal_padding"
                          android:id="@+id/sign_out"
                          android:layout_below="@id/payment_method"
                          android:layout_marginBottom="@dimen/a_small_margin"
                          android:background="@drawable/profile_white_rounded_bg"
                          android:backgroundTint="@color/white"
                />

            </RelativeLayout>

            <View android:layout_width="10dp" android:layout_height="wrap_content"
                  android:background="@drawable/white_rounded_bg_small_radius"
                  android:backgroundTint="@color/colorAccent"
                  android:layout_alignTop="@id/bottom"
                  android:layout_alignBottom="@id/bottom"
                  android:layout_marginStart="@dimen/a_small_margin"
            />

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>