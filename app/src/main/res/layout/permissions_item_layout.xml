<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   app:cardCornerRadius="20dp"
                                   app:cardBackgroundColor="@color/white"
                                   app:cardElevation="@dimen/normal_elevation"
                                   android:layout_gravity="center"
                                   app:cardUseCompatPadding="true"

>
	
	<LinearLayout android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:paddingTop="@dimen/a_small_padding"
	              android:paddingBottom="@dimen/a_small_padding"
	              android:paddingStart="@dimen/normal_padding"
	              android:paddingEnd="@dimen/normal_padding"
	              android:orientation="vertical"
	              android:layout_margin="@dimen/small_margin"
	              android:layout_gravity="center"
	
	>
		<ImageView
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:id="@+id/permission_icon"
				android:scaleType="centerCrop"
				android:background="@drawable/ic_pin"
				android:layout_gravity="center_horizontal"
				android:layout_margin="@dimen/a_small_margin"
		
		/>
		
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:id="@+id/permission_name"
		          android:text="LOCATION"
		          android:fontFamily="@font/proximanovascondensedlight"
		          android:textSize="@dimen/medium_text_size"
		          android:textColor="@color/dark_grey"
		          android:layout_margin="@dimen/a_small_margin"
		          android:layout_gravity="center_horizontal"
		          android:gravity="center_horizontal"
		/>
		
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
		              android:id="@+id/bottom"
		              android:orientation="vertical"
		              android:layout_gravity="center_horizontal"
		              android:paddingStart="@dimen/small_padding"
		              android:paddingEnd="@dimen/small_padding"
		>
			<View android:layout_width="match_parent" android:layout_height="1dp"
			      android:background="@color/dark_grey"
			      android:id="@+id/separator"
			/>
			
			<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
			              android:weightSum="2"
			              android:orientation="horizontal"
			              android:layout_marginTop="@dimen/small_margin"
			              android:gravity="center"
			              android:id="@+id/buttons"
			>
				<ImageView android:layout_width="40dp" android:layout_height="40dp"
				           android:src="@drawable/deny_icon"
				           android:layout_weight="1"
				           android:id="@+id/deny"
				           android:layout_marginStart="@dimen/small_margin"
				           android:layout_marginEnd="@dimen/small_margin"
				/>
				
				<ImageView android:layout_width="40dp" android:layout_height="40dp"
				           android:src="@drawable/allow_icon"
				           android:layout_weight="1"
				           android:id="@+id/allow"
				           android:layout_marginStart="@dimen/small_margin"
				           android:layout_marginEnd="@dimen/small_margin"
				/>
			
			
			</LinearLayout>
		
		
		</LinearLayout>
		
	</LinearLayout>
	
	
</androidx.cardview.widget.CardView>