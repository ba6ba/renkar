<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/first_name_layout"
                  android:layout_marginTop="@dimen/normal_margin"

    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:padding="@dimen/small_padding"

        >
            <View android:layout_width="10dp" android:layout_height="match_parent"
                  android:background="@color/colorAccent"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/first_name"
                      android:fontFamily="@font/gothambook"
                      android:padding="@dimen/small_padding"
                      android:textColor="@color/light_grey"
                      android:textSize="@dimen/small_text_size"
            />

        </LinearLayout>


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:ellipsize="end"
                android:id="@+id/first_name"
                android:textColor="@color/light_grey"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:fontFamily="@font/gothambook"
                android:backgroundTint="@color/white"
                style="@style/Renkar.TextField.Padding"
                android:drawableEnd="@drawable/ic_highlighter"
                android:drawablePadding="@dimen/small_padding"
                android:padding="@dimen/normal_padding"
                android:enabled="false"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/last_name_layout"
                  android:layout_marginTop="@dimen/normal_margin"

    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:padding="@dimen/small_padding"
        >
            <View android:layout_width="10dp" android:layout_height="match_parent"
                  android:background="@color/colorAccent"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/last_name"
                      android:fontFamily="@font/gothambook"
                      android:padding="@dimen/small_padding"
                      android:textColor="@color/light_grey"
                      android:textSize="@dimen/small_text_size"
            />

        </LinearLayout>


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:ellipsize="end"
                android:id="@+id/last_name"
                android:textColor="@color/light_grey"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:fontFamily="@font/gothambook"
                android:backgroundTint="@color/white"
                style="@style/Renkar.TextField.Padding"
                android:drawableEnd="@drawable/ic_highlighter"
                android:drawablePadding="@dimen/small_padding"
                android:padding="@dimen/normal_padding"
                android:enabled="false"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/phone_no_layout"
                  android:layout_marginTop="@dimen/normal_margin"

    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:padding="@dimen/small_padding"
        >
            <View android:layout_width="10dp" android:layout_height="match_parent"
                  android:background="@color/colorAccent"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/phone_no"
                      android:fontFamily="@font/gothambook"
                      android:padding="@dimen/small_padding"
                      android:textColor="@color/light_grey"
                      android:textSize="@dimen/small_text_size"
            />

        </LinearLayout>


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:ellipsize="end"
                android:id="@+id/phone_no"
                android:textColor="@color/light_grey"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:fontFamily="@font/gothambook"
                android:backgroundTint="@color/white"
                style="@style/Renkar.TextField.Padding"
                android:drawableEnd="@drawable/ic_highlighter"
                android:drawablePadding="@dimen/small_padding"
                android:padding="@dimen/normal_padding"
                android:enabled="false"
        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/address_layout"
                  android:layout_marginTop="@dimen/normal_margin"

    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:padding="@dimen/small_padding"
        >
            <View android:layout_width="10dp" android:layout_height="match_parent"
                  android:background="@color/colorAccent"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/address"
                      android:fontFamily="@font/gothambook"
                      android:padding="@dimen/small_padding"
                      android:textColor="@color/light_grey"
                      android:textSize="@dimen/small_text_size"
            />

        </LinearLayout>


        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:ellipsize="end"
                android:id="@+id/address"
                android:textColor="@color/light_grey"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:fontFamily="@font/gothambook"
                android:backgroundTint="@color/white"
                style="@style/Renkar.TextField.Padding"
                android:drawableEnd="@drawable/ic_highlighter"
                android:drawablePadding="@dimen/small_padding"
                android:padding="@dimen/normal_padding"
                android:enabled="false"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/phone_no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/normal_margin"
            android:gravity="center_vertical"
            android:id="@+id/city_dob_layout"
    >

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/d_o_b_layout"
                      android:layout_weight="1"

        >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:padding="@dimen/small_padding"
            >
                <View android:layout_width="10dp" android:layout_height="match_parent"
                      android:background="@color/colorAccent"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/date_of_birth"
                          android:fontFamily="@font/gothambook"
                          android:padding="@dimen/small_padding"
                          android:textColor="@color/light_grey"
                          android:textSize="@dimen/small_text_size"
                />

            </LinearLayout>


            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_text_size"
                    android:ellipsize="end"
                    android:id="@+id/d_o_b"
                    android:textColor="@color/light_grey"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:fontFamily="@font/gothambook"
                    android:backgroundTint="@color/white"
                    style="@style/Renkar.TextField.Padding"
                    android:drawableEnd="@drawable/ic_highlighter"
                    android:drawablePadding="@dimen/small_padding"
                    android:padding="@dimen/normal_padding"
                    android:enabled="false"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/city_layout"
                      android:layout_weight="1"
                      android:layout_gravity="top"

        >
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:padding="@dimen/small_padding"
            >
                <View android:layout_width="10dp" android:layout_height="match_parent"
                      android:background="@color/colorAccent"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/city"
                          android:fontFamily="@font/gothambook"
                          android:padding="@dimen/small_padding"
                          android:textColor="@color/light_grey"
                          android:textSize="@dimen/small_text_size"
                />

            </LinearLayout>



            <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/city"
                    android:spinnerMode="dropdown"
                    android:padding="@dimen/normal_padding"
            >


            </androidx.appcompat.widget.AppCompatSpinner>

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:ellipsize="end"
            android:id="@+id/email"
            android:textColor="@color/white"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:fontFamily="@font/gothambook"
            style="@style/Renkar.TextField.Padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/dark_grey"
            android:padding="@dimen/normal_padding"
            android:enabled="false"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/address"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
    />
    
</LinearLayout>