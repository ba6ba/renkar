<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="@dimen/normal_elevation"
              android:layout_margin="@dimen/small_margin"
>

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:id="@+id/card_view"
                 android:padding="@dimen/small_padding"


    >

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="20dp"
                                           app:cardBackgroundColor="@color/colorAccent_50"
                                           app:contentPadding="@dimen/a_small_padding"
    >
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:padding="@dimen/small_padding"
                        android:id="@+id/ground"
        >

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/ic"
                       android:layout_alignParentStart="true"
                       android:layout_marginEnd="@dimen/normal_margin"
                       android:src="@drawable/ic_history_button"
                       android:layout_centerVertical="true"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/name"
                      android:textColor="@color/white"
                      android:fontFamily="@font/gothambook"
                      android:textSize="@dimen/medium_text_size"
                      android:layout_marginTop="@dimen/small_margin"
                      android:layout_toEndOf="@id/ic"
                      android:text="aosjgag"
            />


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/details"
                      android:textColor="@color/white"
                      android:fontFamily="@font/gothambook"
                      android:textSize="@dimen/small_text_size"
                      android:layout_toEndOf="@id/ic"
                      android:layout_below="@id/name"
                      android:text="aosjgag"
            />


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/duration"
                      android:textColor="@color/white"
                      android:fontFamily="@font/gothambook"
                      android:textSize="@dimen/small_text_size"
                      android:layout_toEndOf="@id/ic"
                      android:layout_below="@id/details"
                      android:layout_marginBottom="@dimen/small_margin"
                      android:text="aosjgag"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/opponent"
                      android:textColor="@color/white"
                      android:fontFamily="@font/gothambook"
                      android:textSize="@dimen/small_text_size"
                      android:layout_below="@id/duration"
                      android:text="with : Shaikh Al Jabair"
                      android:layout_toEndOf="@id/ic"
            />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </FrameLayout>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignEnd="@id/card_view"
                  android:background="@drawable/edit_text_background_rounded"
                  android:backgroundTint="@color/white"
                  android:paddingStart="@dimen/normal_padding"
                  android:paddingEnd="@dimen/normal_padding"
                  android:paddingTop="@dimen/a_small_padding"
                  android:paddingBottom="@dimen/a_small_padding"
                  android:gravity="center_vertical"
                  android:layout_alignBottom="@id/card_view"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Declined"
                  android:layout_marginEnd="@dimen/small_margin"
                  android:id="@+id/status_name"
                  android:fontFamily="@font/gothambook"
                  android:textColor="@color/grey"
                  android:textSize="@dimen/small_text_size"
        />
        <View android:layout_width="15dp" android:layout_height="15dp"
              android:background="@drawable/blue_status_round_corner_bg"
              android:id="@+id/status"
        />

    </LinearLayout>
</RelativeLayout>