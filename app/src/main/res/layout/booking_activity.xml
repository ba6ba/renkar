<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_margin="@dimen/a_small_margin"
>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_above="@id/book"
                android:layout_alignParentTop="true"
    >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:padding="@dimen/normal_padding"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_layout"
            >
                <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:id="@+id/icon_image"
                        app:roundedCornerRadius="25dp"
                        android:elevation="@dimen/small_elevation"
                        android:layout_margin="@dimen/small_margin"
                        app:roundAsCircle="true"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/icon_image"
                        android:paddingStart="@dimen/small_padding"
                        android:paddingEnd="@dimen/small_padding"
                        android:layout_alignBottom="@id/icon_image"
                        android:layout_alignTop="@id/icon_image"
                        android:gravity="end|center_vertical"
                >

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="AJG-420" android:textSize="@dimen/sub_heading_text_size"
                              android:fontFamily="@font/gothamultra"
                              android:id="@+id/number"
                    />



                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="TOYOTA" android:textSize="@dimen/medium_text_size"
                              android:fontFamily="@font/gothammedium1"
                              android:id="@+id/details"
                    />



                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center_vertical"
                                  android:layout_marginTop="@dimen/small_margin"
                    >

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="Color  " android:textSize="@dimen/small_text_size"
                                  android:fontFamily="@font/gothambook"
                        />


                        <LinearLayout android:layout_width="wrap_content" android:layout_height="10dp"
                                      android:orientation="horizontal"
                                      android:layout_marginStart="@dimen/small_margin"
                                      android:layout_marginEnd="@dimen/small_margin"
                        >
                            <View android:layout_width="50dp" android:layout_height="match_parent"
                                  android:background="@drawable/white_round_corner_bg"
                                  android:backgroundTint="@color/colorAccent"
                                  android:id="@+id/color"
                            />

                            <View android:layout_width="8dp" android:layout_height="8dp"
                                  android:background="@drawable/white_round_corner_bg"
                                  android:backgroundTint="@color/colorPrimaryDark"
                                  android:layout_gravity="center_vertical"
                                  android:layout_marginStart="@dimen/small_margin"
                            />


                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatRatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ratingBar"
                                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:layout_marginStart="@dimen/small_margin"
                                android:rating="5"
                                android:visibility="gone"
                        />

                    </LinearLayout>

                </LinearLayout>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="PORSHCE" android:textSize="@dimen/sub_heading_text_size"
                          android:fontFamily="@font/gothamultra"
                          android:id="@+id/car_name"
                          android:layout_below="@id/icon_image"
                />


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/payment_method_layout"
                    android:layout_below="@id/car_layout"
                    android:layout_marginTop="@dimen/normal_margin"
            >
                <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:cardElevation="@dimen/small_elevation"
                                                   app:cardCornerRadius="20dp"
                                                   app:cardBackgroundColor="@color/white"
                                                   android:layout_margin="@dimen/small_margin"
                                                   app:contentPadding="@dimen/a_small_padding"
                >
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/white_round_corner_bg"
                    >
                        <com.facebook.drawee.view.SimpleDraweeView
                                android:layout_width="60dp" android:layout_height="40dp"
                                android:id="@+id/card_icon"
                                app:actualImageScaleType="fitEnd"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/normal_margin"
                                android:layout_toEndOf="@id/card_name"
                                android:layout_marginBottom="@dimen/normal_margin"
                        />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/card_name"
                                  android:text="MASTER CARD"
                                  android:textSize="@dimen/normal_text_size"
                                  android:textAllCaps="true"
                                  android:fontFamily="@font/gothammedium"
                                  android:textColor="@color/grey"
                                  android:layout_alignParentTop="true"
                        />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/payment_method_card_number"
                                  android:text="1111 **** 0000 ****"
                                  android:textSize="@dimen/small_text_size"
                                  android:textAllCaps="true"
                                  android:fontFamily="@font/gothambook"
                                  android:textColor="@color/light_grey"
                                  android:layout_below="@id/card_name"
                        />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/book_now_button_bg"
                    android:backgroundTint="@color/colorAccent"
                    android:id="@+id/price_layout"
                    android:padding="@dimen/normal_padding"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_below="@id/payment_method_layout"
            >

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="150"
                          android:layout_toEndOf="@id/text"
                          android:textSize="@dimen/large_text_size"
                          android:textColor="@color/white"
                          android:id="@+id/price"
                          android:fontFamily="@font/gothamultra"
                          android:gravity="center"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="PER DAY"
                          android:textSize="@dimen/small_text_size"
                          android:textColor="@color/white"
                          android:id="@+id/per_day"
                          android:layout_gravity="bottom"
                          android:fontFamily="@font/gothammedium1"
                          android:layout_below="@id/price"
                />

                <View android:layout_width="2dp" android:layout_height="wrap_content"
                      android:layout_alignTop="@id/price"
                      android:layout_alignBottom="@id/per_day"
                      android:layout_toEndOf="@id/price"
                      android:layout_marginStart="@dimen/large_margin"
                      android:layout_marginEnd="@dimen/large_margin"
                      android:background="@color/white"
                      android:id="@+id/separator"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="150"
                          android:layout_toEndOf="@id/separator"
                          android:textSize="@dimen/large_text_size"
                          android:textColor="@color/white"
                          android:id="@+id/price_total"
                          android:fontFamily="@font/gothamultra"
                          android:gravity="center"
                          android:layout_alignStart="@id/total_rent"
                          android:layout_alignEnd="@id/total_rent"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="TOTAL RENT"
                          android:textSize="@dimen/small_text_size"
                          android:textColor="@color/white"
                          android:id="@+id/total_rent"
                          android:layout_toEndOf="@id/separator"
                          android:fontFamily="@font/gothammedium1"
                          android:layout_below="@id/price_total"
                />


            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/address_layout" android:orientation="horizontal"
                          android:layout_below="@id/price_layout"
                          android:layout_marginTop="@dimen/normal_margin"
                          android:layout_alignParentStart="true">

                <ImageView android:layout_width="50dp" android:layout_height="50dp"
                           android:background="@drawable/white_round_corner_bg"
                           android:elevation="@dimen/small_elevation"
                           android:backgroundTint="@color/v_lightest_grey"
                           android:src="@drawable/ic_pin"
                           android:padding="@dimen/a_small_padding"
                           android:layout_margin="@dimen/small_margin"
                />

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="ADDRESS"
                          android:fontFamily="@font/gothambook"
                          android:textSize="@dimen/small_text_size"
                          android:layout_marginStart="@dimen/small_margin"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/dark_grey"
                          android:id="@+id/address_tv"
                />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:background="@drawable/white_round_corner_bg"
                 android:backgroundTint="@color/colorAccent"
                 android:padding="@dimen/small_padding"
                 android:id="@+id/book"
                 android:layout_marginTop="@dimen/normal_margin"
                 android:layout_alignParentBottom="true"
    >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="BOOK A CAR" android:textSize="@dimen/medium_text_size"
                  android:textColor="@color/white"
                  android:fontFamily="@font/gothammedium1"
                  android:layout_gravity="center"
        />

        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:background="@drawable/white_round_corner_bg"
                   android:backgroundTint="@color/white"
                   android:src="@drawable/ic_next"
                   android:layout_gravity="center_vertical|end"
        />

    </FrameLayout>

</RelativeLayout>
