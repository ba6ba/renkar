<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
				android:paddingStart="@dimen/medium_padding"
				android:paddingEnd="@dimen/medium_padding"
				android:paddingTop="@dimen/normal_padding"
				android:paddingBottom="@dimen/normal_padding"
				android:layout_height="300dp">

	<FrameLayout android:layout_width="match_parent" android:layout_height="200dp"
				 android:id="@+id/frame"
	>

		<com.facebook.drawee.view.SimpleDraweeView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:id="@+id/coverFrame"
				app:overlayImage="@drawable/light_shade"
				app:roundedCornerRadius="25dp"
				android:elevation="@dimen/small_elevation"
				android:layout_margin="@dimen/small_margin"
		/>

	</FrameLayout>

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:weightSum="2"
				  android:baselineAligned="false"
				  android:layout_alignParentBottom="true"
				  android:layout_below="@id/frame"
	>
		<RelativeLayout android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:layout_below="@id/coverFrame"
		                android:gravity="bottom"
		                android:id="@+id/carLayout"
		                android:layout_weight="1.2"
						android:layout_marginStart="@dimen/v_small_margin"
						android:layout_marginEnd="@dimen/v_small_margin"
		                android:layout_gravity="center_vertical"
		>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="S"
			          android:textSize="@dimen/large_text_size"
			          android:fontFamily="@font/gothamultra"
			          android:textColor="@color/colorPrimaryDark"
			          android:id="@+id/car_name"
			          android:paddingTop="@dimen/small_padding"
			          android:paddingBottom="@dimen/small_padding"
					  android:layout_toStartOf="@id/car_model"
					  android:layout_alignParentStart="true"
			          android:layout_marginEnd="@dimen/small_margin"
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="1969"
			          android:textSize="@dimen/medium_text_size"
			          android:fontFamily="@font/gothambook"
			          android:textColor="@color/light_grey"
			          android:id="@+id/car_model"
			          android:textAlignment="textEnd"
			          android:layout_alignEnd="@id/car_manufacturer"
			          android:layout_marginStart="@dimen/small_margin"
					  android:layout_alignParentEnd="true"
					  android:layout_alignBottom="@id/car_name"
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="FORD"
			          android:textSize="@dimen/medium_text_size"
			          android:fontFamily="@font/gothambook"
			          android:textStyle="bold"
			          android:textColor="@color/light_grey"
			          android:id="@+id/car_manufacturer"
			          android:layout_above="@id/car_model"
			          android:textAlignment="textEnd"
					  android:layout_alignParentEnd="true"
					  android:layout_marginStart="@dimen/small_margin"
			/>
			
			
			<androidx.appcompat.widget.AppCompatRatingBar
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/ratingBar"
					android:layout_alignEnd="@id/car_name"
					style="@style/Base.Widget.AppCompat.RatingBar.Small"
					android:isIndicator="true"
					android:numStars="5"
					android:rating="5"
					android:layout_alignStart="@id/car_name"
					android:layout_below="@id/car_name"

			/>
		
		</RelativeLayout>
		
		<RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
		                android:id="@+id/personLayout"
		                android:layout_weight="0.8"
		                android:layout_gravity="center_vertical"
						android:layout_marginStart="@dimen/v_small_margin"
						android:layout_marginEnd="@dimen/v_small_margin"
		>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="by"
			          android:textSize="@dimen/medium_text_size"
			          android:fontFamily="@font/fondy"
			          android:textColor="@color/colorAccent"
			          android:layout_alignParentEnd="true"
			          android:id="@+id/of"
			          android:layout_alignParentTop="true"
			/>
			
			
			<com.facebook.drawee.view.SimpleDraweeView
					android:layout_width="40dp"
					android:layout_height="40dp"
					app:placeholderImage="@drawable/ic_boy"
					android:id="@+id/person_icon"
					android:layout_alignBottom="@id/person_name"
					android:layout_alignTop="@id/of"
					app:roundAsCircle="true"
					android:layout_alignParentStart="true"
			/>
			
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:text="ABDUL BASIT"
			          android:textSize="@dimen/small_text_size"
			          android:fontFamily="@font/gothambook"
			          android:textStyle="bold"
			          android:ellipsize="end"
			          android:textColor="@color/light_grey"
			          android:id="@+id/person_name"
			          android:maxLength="15"
					  android:textAlignment="textEnd"
			          android:layout_below="@id/of"
					  android:layout_alignEnd="@id/of"
					  android:layout_toEndOf="@id/person_icon"

			/>
		
		</RelativeLayout>
		
	</LinearLayout>

	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:background="@drawable/white_round_corner_bg"
			  android:text="15$/hr"
			  android:backgroundTint="@color/white"
			  android:layout_alignParentEnd="true"
			  android:layout_alignTop="@id/frame"
			  android:textSize="@dimen/medium_text_size"
			  android:fontFamily="@font/gothamultra"
			  android:paddingTop="@dimen/small_padding"
			  android:paddingBottom="@dimen/small_padding"
			  android:paddingStart="@dimen/medium_padding"
			  android:gravity="top"
			  android:id="@+id/price"
			  android:paddingEnd="@dimen/medium_padding"
			  android:textColor="@color/colorAccent"
	/>


</RelativeLayout>