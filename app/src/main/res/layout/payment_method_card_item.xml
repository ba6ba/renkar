<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:padding="@dimen/small_padding"
             android:layout_height="wrap_content">

    <FrameLayout android:layout_width="180dp" android:layout_height="100dp"
                 android:id="@+id/main"
    >

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       app:cardElevation="@dimen/small_elevation"
                                       app:cardCornerRadius="20dp"
                                       app:cardBackgroundColor="@color/white"
                                       android:layout_margin="@dimen/small_margin"
                                       app:contentPadding="@dimen/small_padding"
    >
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
        >
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/card_icon"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentTop="true"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/card_name"
                      android:text="MASTER CARD"
                      android:textSize="@dimen/medium_text_size"
                      android:textAllCaps="true"
                      android:fontFamily="@font/gothammedium"
                      android:textColor="@color/grey"
                      android:layout_below="@id/card_icon"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/card_number"
                      android:text="1111 **** 0000 ****"
                      android:textSize="@dimen/small_text_size"
                      android:textAllCaps="true"
                      android:fontFamily="@font/gothambook"
                      android:textColor="@color/light_grey"
                      android:layout_below="@id/card_name"
            />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </FrameLayout>

    <ImageView android:layout_width="25dp" android:layout_height="25dp"
               android:id="@+id/active_card"
               android:layout_alignEnd="@id/main"
               android:layout_alignBottom="@id/main"
               android:src="@drawable/tick_black"
    />
</RelativeLayout>