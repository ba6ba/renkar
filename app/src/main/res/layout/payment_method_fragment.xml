<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="180dp"
                  android:layout_below="@id/heading"
                  android:background="@color/v_light_grey"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/small_margin"
                  android:padding="@dimen/small_padding"
                  android:id="@+id/cards_view"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Select your Method" android:textSize="@dimen/medium_text_size"
                  android:fontFamily="@font/gothambook"
                  android:layout_margin="@dimen/normal_margin"
                  android:textColor="@color/dark_grey"

        />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/payment_method_rc_view"
        >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:layout_below="@id/cards_view"
                                           android:id="@+id/bottom_view"
                                           android:visibility="gone"
    >

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
    >

        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/card_icon_main"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                app:actualImageScaleType="fitCenter"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="Card Holder"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_below="@id/card_icon_main"
                android:id="@+id/card_holder_layout"
                style="@style/Renkar.TextInputLayout"
                app:hintTextAppearance="@style/Renkar.TextInputLayout.Hint"
        >


            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/lightest_grey"
                    android:fontFamily="@font/gothambook"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text_size"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:inputType="textCapSentences"
                    android:backgroundTint="@color/white"
                    android:id="@+id/card_holder"
                    android:maxLength="20"
                    android:imeOptions="actionNext"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="Card Number"
                style="@style/Renkar.TextInputLayout"
                app:hintTextAppearance="@style/Renkar.TextInputLayout.Hint"
                android:layout_below="@id/card_holder_layout"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                app:helperText="must be of 13 characters"
                app:helperTextTextColor="@color/light_grey"
                app:helperTextEnabled="true"
                android:id="@+id/card_number_layout"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/lightest_grey"
                    android:fontFamily="@font/gothambook"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/medium_text_size"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:backgroundTint="@color/white"
                    android:id="@+id/payment_method_card_number"
                    android:maxLength="13"
                    android:imeOptions="actionNext"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:weightSum="2" android:orientation="horizontal"
                      android:layout_below="@id/card_number_layout"
                      android:id="@+id/expiry_ccv_layout"
                      android:layout_marginTop="@dimen/normal_margin"
                      android:layout_marginBottom="@dimen/normal_margin"
        >
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="Expiry Date"
                    style="@style/Renkar.TextInputLayout"
                    app:hintTextAppearance="@style/Renkar.TextInputLayout.Hint"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:id="@+id/expiry_layout"
            >

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/lightest_grey"
                        android:fontFamily="@font/gothambook"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:inputType="date"
                        android:id="@+id/expiry"
                        android:imeOptions="actionNext"
                        android:backgroundTint="@color/white"
                />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true"
                    app:hintAnimationEnabled="true"
                    android:hint="CCV"
                    style="@style/Renkar.TextInputLayout"
                    app:hintTextAppearance="@style/Renkar.TextInputLayout.Hint"
                    android:gravity="center_vertical"
                    app:helperText="must be of 3 characters"
                    app:helperTextTextColor="@color/light_grey"
                    app:helperTextEnabled="true"
                    android:id="@+id/ccv_layout"
                    android:layout_marginStart="@dimen/small_margin"
            >

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/lightest_grey"
                        android:fontFamily="@font/gothambook"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:inputType="number"
                        android:id="@+id/ccv"
                        android:maxLength="3"
                        android:backgroundTint="@color/white"
                        android:imeOptions="actionDone"
                />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                     android:background="@drawable/white_round_corner_bg"
                     android:backgroundTint="@color/colorAccent"
                     android:padding="@dimen/small_padding"
                     android:layout_alignParentBottom="true"
                     android:layout_below="@id/expiry_ccv_layout"
                     android:id="@+id/confirm"
                     android:layout_margin="@dimen/small_margin"
        >

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="CONFIRM" android:textSize="@dimen/medium_text_size"
                      android:textColor="@color/white"
                      android:fontFamily="@font/gothammedium1"
                      android:layout_gravity="center"
            />

            <ImageView android:layout_width="50dp" android:layout_height="50dp"
                       android:background="@drawable/white_round_corner_bg"
                       android:backgroundTint="@color/white"
                       android:src="@drawable/ic_next"
                       android:layout_gravity="center_vertical|end"
            />

        </FrameLayout>

    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>